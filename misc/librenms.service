[Unit]
Description=LibreNMS SNMP Poller Service
After=network.target

[Service]
ExecStart=/opt/librenms/librenms-service.py -v
ExecReload=/bin/kill -HUP $MAINPID
WorkingDirectory=/opt/librenms
User=librenms
Group=librenms
RestartSec=10
Restart=always
# If a Python virtual environment has been set up, you need define the PATH
#Environment=PATH=/opt/librenms/.python_venvs/dispatcher/bin:/usr/local/bin:/usr/bin

[Install]
WantedBy=multi-user.target
