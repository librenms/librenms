# LibreNMS Production Environment Configuration

# Application settings
APP_ENV=production
APP_DEBUG=false
APP_LOG_LEVEL=warning

# Database connection
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=librenms
DB_USERNAME=librenms
DB_PASSWORD=

# Caching (Redis recommended for production)
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Redis configuration
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=null
REDIS_DATABASE=0

# Mail settings (configure for production alerts)
MAIL_MAILER=smtp
MAIL_HOST=localhost
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="${APP_NAME}"

# LibreNMS specific settings
LIBRENMS_USER=librenms

# Production security
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false

# Default admin user (change these!)
ADMIN_USER=admin
ADMIN_EMAIL=admin@your-domain.com
ADMIN_PASSWORD=

# API settings
API_RATE_LIMIT=60

# Timezone
APP_TIMEZONE=UTC

# Locale settings
APP_LOCALE=en
APP_FALLBACK_LOCALE=en

# Session settings (secure for production)
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=strict

# HTTPS enforcement
FORCE_HTTPS=true

# Performance tuning
OPT_CACHE_ENABLE=true
VIEW_CACHE_ENABLE=true
CONFIG_CACHE_ENABLE=true

# Monitoring and logging
LOG_STACK=daily
LOG_DAYS=7

# Backup configuration
BACKUP_ENABLED=true
BACKUP_DESTINATION=local
BACKUP_RETENTION_DAYS=30

# Security headers
SECURITY_HEADERS_ENABLE=true
HSTS_ENABLE=true
CSP_ENABLE=true
