# LibreNMS Development Environment Configuration

# Application settings
APP_ENV=local
APP_DEBUG=true
APP_LOG_LEVEL=debug

# Database connection
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=librenms
DB_USERNAME=librenms
DB_PASSWORD=

# Caching (Redis not required for development)
CACHE_DRIVER=file
SESSION_DRIVER=file
QUEUE_CONNECTION=sync

# Mail settings (for testing alerts)
MAIL_MAILER=log
MAIL_HOST=localhost
MAIL_PORT=25
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null

# LibreNMS specific settings
LIBRENMS_USER=librenms

# Development features
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=true

# Default admin user (created during installation)
ADMIN_USER=admin
ADMIN_EMAIL=admin@localhost
ADMIN_PASSWORD=

# API settings  
API_RATE_LIMIT=1000

# Timezone
APP_TIMEZONE=UTC

# Locale settings
APP_LOCALE=en
APP_FALLBACK_LOCALE=en

# Session settings
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false
