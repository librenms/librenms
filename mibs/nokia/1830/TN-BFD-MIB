    MODULE-IDENTITY, OBJECT-TYPE, Unsigned32
        FROM SNMPv2-SMI

--  MODULE-COMPLIANCE, OBJECT-GROUP
--      FROM SNMPv2-CONF

    DisplayString, RowStatus, TimeInterval
        FROM SNMPv2-TC

    tnSRMIBModules, tnSRObjs, tnSRNotifyPrefix
        FROM TROPIC-GLOBAL-REG

    TNamedItem
        FROM TN-TC-MIB

    tnSysSwitchId
        FROM TROPIC-SYSTEM-MIB

    ;

