    DEFVAL     { disable }
    ::= {alaPimsmGlobalConfig 26}

alaPimsmRegisterRateLimit    OBJECT-TYPE
    SYNTAX     Integer32 (0..65535)
    UNITS      "packets per second"
    MAX-ACCESS read-write
    STATUS     current
    DESCRIPTION
               "Configures the maximum number of PIM Register Packets that 
                the Designated Router (DR) will send per second for each 
                (S,G) entry. 

                A default value of 0 indicates that no rate-limiting is
                being performed for outgoing PIM Register messages."
    DEFVAL     { 0 }
    ::= { alaPimsmGlobalConfig 27 }

alaPimsmV6RegisterRateLimit    OBJECT-TYPE
    SYNTAX     Integer32 (0..65535)
    UNITS      "packets per second"
    MAX-ACCESS read-write
    STATUS     current
    DESCRIPTION
               "Configures the maximum number of IPv6 PIM Register Packets 
                that the Designated Router (DR) will send per second for 
                each (S,G) entry. 

                A default value of 0 indicates that no rate-limiting is
                being performed for outgoing IPv6 PIM Register messages."
    DEFVAL     { 0 }
    ::= { alaPimsmGlobalConfig 28 }

alaPimsmRegisterMsgPackingStatus     OBJECT-TYPE
    SYNTAX     INTEGER {
                   enable(1),
                   disable(2),
                   forceEnable(3)
               }
    MAX-ACCESS read-write
    STATUS     current
    DESCRIPTION
               "Administratively enables/disables the packing of PIM
                Null Register and Register Stop messages on this router.

                The value forceEnable(3) is used to automatically pack all
                Null Register and Register Stop messages to all RPs
                regardless of receiving verification from the RPs that
                null register packing is supported.  

                If PIM Anycast-RP is being used, Register Message Packing 
                should be enabled only if it is supported by all PIM anycast 
                RP members in the RP set.  The value forceEnable(3)
                is the recommended configuration with Anycast-RP in order to
                eliminate the initial stage of determining whether the new register 
                message format for packing the messages is supported or not."
    DEFVAL     { disable }
    ::= {alaPimsmGlobalConfig 29}

alaPimsmV6RegisterMsgPackingStatus     OBJECT-TYPE
    SYNTAX     INTEGER {
                   enable(1),
                   disable(2),
                   forceEnable(3)
               }
    MAX-ACCESS read-write
    STATUS     current
    DESCRIPTION
               "Administratively enables/disables the packing of PIM IPv6
                Null Register and Register Stop messages on this router.

                The value forceEnable(3) is used to automatically pack all
                Null Register and Register Stop messages to all RPs
                regardless of receiving verification from the RPs that
                null register packing is supported.  
                
                If PIM Anycast-RP is being used, Register Message Packing 
                should be enabled only if it is supported by all PIM anycast 
                RP members in the RP set.  The value forceEnable(3)
                is the recommended configuration with Anycast-RP in order to
                eliminate the initial stage of determining whether the new register 
                message format for packing the messages is supported or not."
    DEFVAL     { disable }
    ::= {alaPimsmGlobalConfig 30}

alaPimsmPackedRegisterMsgMtu     OBJECT-TYPE
    SYNTAX     Integer32 (0..9198)
    UNITS      "bytes"
    MAX-ACCESS read-write
    STATUS     current
    DESCRIPTION
               "Configures the maximum size used when sending packed PIM Null
                Register messages and Register Stop messages. 
                This configuration can help control the MTU size of the PIM 
                Null Register/Register Stop packets getting sent out."
    DEFVAL { 1500 }
    ::= {alaPimsmGlobalConfig 31}

alaPimsmV6PackedRegisterMsgMtu     OBJECT-TYPE
    SYNTAX     Integer32 (0..9198)
    UNITS      "bytes"
    MAX-ACCESS read-write
    STATUS     current
    DESCRIPTION
               "Configures the maximum size used when sending packed PIM IPv6 
                Null Register messages and Register Stop messages. 
                This configuration can help control the MTU size of the PIM 
                Null Register/Register Stop packets getting sent out."
    DEFVAL { 1500 }
    ::= {alaPimsmGlobalConfig 32}

alaPimsmPackedRegisterMsgDelay OBJECT-TYPE
    SYNTAX     Unsigned32 (0..32767)
    UNITS      "milliseconds"
    MAX-ACCESS read-write
    STATUS     current
    DESCRIPTION
               "Configures the Packed Null Register Delay interval (in milliseconds).
                This is used to delay the sending of triggered Null Register
                messages and may be desirable to allow the packing of
                triggered Null Register messages due to bursts of traffic. 
                
                This may be particularly useful when running Anycast-RP with the
                alaPimsmRegsterMsgPackingStatus set to forceEnable(3) to allow the
                packing of triggered Null Register messages due to the initial learning
                of the flows which may result in subsequent bursts of triggered Null
                Register packets to all Anycast-RP routers.

                The default value of 0 implies no deferred processing and will 
                result in no packing of triggered Null Register messages."
    DEFVAL { 0 }
    ::= { alaPimsmGlobalConfig 33 }

alaPimsmV6PackedRegisterMsgDelay OBJECT-TYPE
    SYNTAX     Unsigned32 (0..32767)
    UNITS      "milliseconds"
    MAX-ACCESS read-write
    STATUS     current
    DESCRIPTION
               "Configures the IPv6 Packed Null Register Delay interval (in milliseconds).
                This is used to delay the sending of triggered Null Register
                messages and may be desirable to allow the packing of
                triggered Null Register messages due to bursts of traffic. 
                
                This may be particularly useful when running Anycast-RP with the
                alaPimsmRegsterMsgPackingStatus set to forceEnable(3) to allow the
                packing of triggered Null Register messages due to the initial learning
                of the flows which may result in subsequent bursts of triggered Null
                Register packets to all Anycast-RP routers.

                The default value of 0 implies no deferred processing and will 
                result in no packing of triggered Null Register messages."
    DEFVAL { 0 }
    ::= { alaPimsmGlobalConfig 34 }

